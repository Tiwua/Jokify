@model AdminJokeHomeView

@{
	ViewData["Title"] = "Home";
}

<html>
<head>
	<style>
		.total-jokes-container {
			text-align: center;
			margin-top: 50px;
		}

		.jokes-count {
			background-color: #ff4b2b;
			color: #fff;
			font-size: 26px;
			font-weight: bold;
			width: 70px;
			height: 70px;
			line-height: 70px;
			border-radius: 50%;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			display: inline-block;
			position: relative;
			left: 400px;
			text-align: center;
		}

.hero-text h1 {
	position: relative;
	left: 400px;
    font-size: 40px;
    line-height: 1.3;
    font-weight: 800;
    color: white;
	margin-bottom: 20px;
	text-align: center;
}
.head {
	position: relative;
	bottom: 100px;
}


	</style>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
	<section class="hero">
		<div class="hero-text">

			<h1 class="head">Welcome to the Admin interface</h1>

			<div class="total-jokes-container">
				<h1>Total Jokes Count</h1>
				<div class="jokes-count">
					<span>@Model.JokesCount</span>
				</div>
			</div>
		</div>
	</section>

	<script src="https://unpkg.com/scrollreveal"></script>
</body>
</html>
