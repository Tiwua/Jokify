@using Jokify.Infrastructure.Data.Models;
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navlist">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
}
else
{        
    <li>
        <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </li>
    <li>
        <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>
}
</ul>
