@model AllJokesQueryModel

@{
    ViewBag.Title = "All Jokes";
}
@section Styles{

    <style>
        .jokes-container {
            position: relative;
            right: 200px;
            left: 10px;
            bottom: 50px;
            top: 40px;
            display: inline-grid;
            grid-template-columns: 1fr 1fr 1fr;
            grid-gap: 100px;
            grid-row-gap: 50px;
        }

        .button-left {
            display: inline-block;
            width: 50px;
            height: 50px;
            background-color: #ff4b2b;
            border: none;
            border-radius: 50%;
            text-align: center;
            cursor: pointer;
        }

            .button-left:hover {
                background-color: black;
                border: 2px solid white;
                width: 55px;
                height: 55px;
                transition: 0.5s;
            }

            .button-left:before {
                content: "\2190"; /* Unicode code for left arrow */
                font-size: 24px;
                line-height: 50px;
                width: 55px;
                height: 55px;
                transition: 1s;
                color: white;
            }

        .button-right {
            display: inline-block;
            width: 50px;
            height: 50px;
            border: none;
            border-radius: 50%;
            text-align: center;
            cursor: pointer;
            background-color: #ff4b2b;
        }

            .button-right:before {
                content: "\2192"; /* Unicode code for right arrow */
                font-size: 24px;
                width: 55px;
                height: 55px;
                transition: 1s;
                color: white;
            }

            .button-right:hover {
                background-color: black;
                width: 55px;
                height: 55px;
                transition: 0.5s;
            }

            .right{
                position: fixed;
                top:100px;
                left: 1350px;
            }
            .left{
                position: fixed;
                top: 100px;
            }
    </style>
    <link href="~/css/all-jokes.css" rel="stylesheet" />

}

<h1 class="centered-lowered-div">@ViewData["Title"]</h1>

<head>

