
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link href="~/css/login.css" rel="stylesheet" />
}

@if (Model.ReturnUrl != null)
{
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
}

<h1 class="centered">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="loginForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.UserName">Username</label>
                <input type="text" autocomplete="username" aria-required="true" asp-for="@Model.UserName" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password">Password</label>
                <input type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="loginSubmit" type="submit" class="button">Log in</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/script.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}